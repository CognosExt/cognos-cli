<?xml version='1.0' encoding='utf-8'?>
<widget id="com.daimler.it-kpis-mobile.internal.iOS" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>IT KPIs mobile</name>
    <description>
        Very simple mobile Cognos client
    </description>
    <author email="mbox-itm-pms@daimler.com">
        IT/QS
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="*" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="mcognos" />
        <variable name="ANDROID_SCHEME" value=" " />
        <variable name="ANDROID_HOST" value=" " />
        <variable name="ANDROID_PATHPREFIX" value="/" />
    </plugin>
    <plugin name="cordova-plugin-secure-key-store" spec="^1.5.5" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <platform name="android">
    </platform>
    <platform name="ios">
        <BackupWebStorage>local</BackupWebStorage>
    </platform>
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^6.4.0" />
    <engine name="ios" spec="^4.5.5" />
</widget>
